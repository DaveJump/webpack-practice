{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "ignoredNodes": ["TemplateLiteral"]
      }
    ],
    "linebreak-style": [
      0,
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 0,
    "react/jsx-uses-react": "error",
    "react/prop-types": "error",
    "prefer-const": 0
  }
}
